{
    "name": "drbiko/slack",
    "description": "A simple PHP package (fork of php-slack/slack) for sending messages to Slack, with a focus on ease of use and elegant syntax.",
    "keywords": ["laravel", "slim", "slack"],
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "maknz",
            "email": "github@mak.geek.nz"
        },
        {
            "name": "Alexander Chibrikin",
            "email": "alek13.me@gmail.com"
        },
        {
            "name": "Biko Allen",
            "email": "biko@docresponse.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "guzzlehttp/guzzle": "~6.0|~5.0|~4.0",
        "ext-mbstring": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Maknz\\Slack\\": "src/",
            "Slack\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "minimum-stability": "stable"
}
